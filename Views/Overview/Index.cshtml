@model Website.Models.OverviewList
@using Sitecore.Mvc.Extensions
    <!-- [Category List] -->
<ul class="block-grid-md-4 block-grid-sm-3 block-grid-xs-1">
    @foreach (var item in Model)
    {
        <li>
            <div class="thumbnail">
                <a href="Event-List.html">
                    @item.Image
                </a>
                <div class="caption">
                    <h3 class="teaser-heading"> @item.Title</h3>
                    <a href="@item.Url" class="btn btn-default">Read more</a>
                </div>
            </div>
        </li>
    }
</ul>
    <!-- [Category List] -->
